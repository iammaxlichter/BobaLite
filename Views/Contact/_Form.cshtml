@model BobaLite.Models.ContactForm

<div class="contact-form-wrapper">
    <h2>Contact Us Now!</h2>

    <form id="contact-form" asp-action="Index" asp-controller="Contact" method="post">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" placeholder="Your name" maxlength="50" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" placeholder="you@example.com" maxlength="100" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Message"></label>
            <textarea asp-for="Message" class="form-control" rows="5" placeholder="Type your messageâ€¦"
                maxlength="1000"></textarea>
            <span asp-validation-for="Message" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Send Message</button>

        @if (ViewBag.Success != null)
        {
            <div class="alert alert-success">@ViewBag.Success</div>
        }
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <ul>
                    @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@err.ErrorMessage</li>
                    }
                </ul>
            </div>
        }
    </form>
</div>
