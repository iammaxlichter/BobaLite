@model BobaLite.ViewModels.ShopViewModel

@{
    Layout = "_Layout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Shop/main.css" />
}

<div class="shop-hero">
    <img src="/images/Shop/bobalite-hero.png" alt="Hero Image">
</div>

<!-- render your filter UI (checkboxes + pills) -->
@await Html.PartialAsync("_Filters", Model)

<!-- now render the grid, passing in the filtered Products -->
@await Html.PartialAsync("_Grid", Model.Products)

@section Scripts {
    <script type="module" src="~/js/Shop/main.js"></script>
}
